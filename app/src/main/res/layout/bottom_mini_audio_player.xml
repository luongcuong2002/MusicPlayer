<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_mini_player_light_theme"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="3dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_13sdp"
        android:paddingVertical="@dimen/_7sdp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_47sdp"
            android:layout_height="@dimen/_47sdp"
            app:cardCornerRadius="@dimen/_100sdp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/iv_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_song_thumbnail" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.kma.musicplayer.ui.customview.MovableText
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_semibold"
                android:text="The Weeknd"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@font/nunito_medium"
                android:text="Yann tiarsen"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_787B82"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_previous"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_previous" />

        <ImageView
            android:id="@+id/iv_play_pause"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:src="@drawable/ic_mini_play" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_next" />

        <ImageView
            android:id="@+id/iv_song_queue"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:src="@drawable/ic_song_queue" />

    </LinearLayout>
</layout>